<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="325" Width="250">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		
		<Label Grid.Row="0" Grid.Column="0">Button</Label>
		<Button Grid.Row="0" Grid.Column="1" Command="{Binding Path=ButtonClicked}" CommandParameter="0">Click me</Button>

		<Label Grid.Row="1" Grid.Column="0">Toggle Button</Label>
		<ToggleButton Grid.Row="1" Grid.Column="1">Toggle me</ToggleButton>

		<Label Grid.Row="2" Grid.Column="0">CheckBox</Label>
		<CheckBox Grid.Row="2" Grid.Column="1">Check me</CheckBox>
	</Grid>
</UserControl>
